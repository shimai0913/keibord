{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["warn", 2],
        "no-var": "warn",
        "no-multiple-empty-lines": ["warn" , {"max": 1}],
        "no-trailing-spaces": "warn",
        "space-infix-ops": "warn",
        "dot-notation": "warn",
        "eqeqeq": "warn",
        "arrow-spacing": "warn",
        "no-console": ["warn", { "allow": ["warn", "error"] }],
        "multiline-ternary": "off",
        "react/prop-types": "off"
    }
}
